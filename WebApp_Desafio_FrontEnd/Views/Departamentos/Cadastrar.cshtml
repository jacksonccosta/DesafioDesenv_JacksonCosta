@model WebApp_Desafio_Shared.ViewModels.DepartamentoViewModel

<div class="row wrapper border-bottom white-bg page-heading header-title">
    <div class="col-sm-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <form id="form" asp-action="Cadastrar" role="form" onsubmit="return false;">
            <input type="hidden" asp-for="ID" />
            <div class="row">
                <div class="form-group col-lg-7 col-md-6 col-sm-12">
                    <label class="form-label" asp-for="Descricao"></label>
                    <input type="text" class="form-control" asp-for="Descricao">
                    <span class="text-danger" asp-validation-for="Descricao"></span>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="panel-body mt-3">
    <fieldset>
        <div class="row">
            <div class="form-group col-sm-12 text-right">
                <button type="button" id="btnCancelar" class="btn btn-outline btn-default">Cancelar</button>
                <button type="button" id="btnSalvar" class="btn btn-outline btn-primary">Salvar</button>
            </div>
        </div>
    </fieldset>
</div>

@section styles {
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section scripts {
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/Departamentos/Cadastrar.js" asp-append-version="true"></script>
}