@model WebApp_Desafio_FrontEnd.ViewModels.DepartamentoViewModel

@{
    ViewData["Title"] = "Departamentos";
}

<div class="row mt-3">
    <div class="col-lg-6 text-left">
        <button type="button" class="btn btn-outline btn-primary" id="btnRelatorio">
            <i class="fa fa-file-pdf-o"></i> Relatório
        </button>
    </div>
    <div class="col-lg-6 text-right">
    </div>
</div>

<div class="row mt-3">
    <div class="col-lg-12">

        <table class="table table-striped table-bordered table-hover" id="dataTables-Departamentos">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ID)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

@section styles
{
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section scripts
{
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>

    <script src="~/js/Departamentos/Listar.js" asp-append-version="true"></script>
}